<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="0dp"
    android:orientation="vertical"
    android:background="#222222" >

    <!-- 타이틀 뷰  -->
    <LinearLayout
        android:id="@+id/mouse_mapping"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:orientation="vertical"
	    android:paddingBottom="2px"
	    android:background="#888888">
	    <RelativeLayout 
	        android:layout_width="match_parent"	        
	        android:layout_height="wrap_content"
	        android:background="#396685"
	        android:paddingTop="5dp"
	        android:paddingRight="10dp"
	        android:paddingBottom="5dp"
	        android:paddingLeft="0dp">
	        
	        <ImageView 
	            android:id="@+id/back_image"
	            android:layout_width="50dp"
		        android:layout_height="40dp"
		        android:src="@drawable/icon_back"
		        android:layout_marginRight="10dp"
		        android:layout_marginLeft="5dp"
		        android:layout_centerVertical="true"
		        android:layout_alignParentLeft="true"/>      
	        <TextView
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:layout_toRightOf="@id/back_image" 
		        android:textColor="#ffffff"
		        android:text="Button Mapping" 
		        android:layout_centerVertical="true"
		        android:textSize="20sp"/>	        
    	</RelativeLayout>    
    </LinearLayout>
	<!-- 스크롤 뷰 -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/mouse_mapping" >
	    <LinearLayout
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:orientation="vertical">
	        <TextView 
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:paddingLeft="15dp"
	            android:paddingTop="2dp"
	            android:paddingRight="2dp"
	            android:paddingBottom="2dp"
	            android:textSize="15sp"
	            android:text="buttons"
	            android:background="#444444"/>
	        <!-- 왼쪽버튼 -->
	        <LinearLayout
			    android:layout_width="match_parent"
			    android:layout_height="wrap_content"
			    android:orientation="vertical"
			    android:paddingBottom="2px"
			    android:background="#55888888">
			    <RelativeLayout
		        	android:id="@+id/btn_left" 
			        android:layout_width="match_parent"
			        android:layout_height="wrap_content"
			        android:background="@drawable/row_background"
			        android:padding="10dp">
			        <ImageView 
			            android:id="@+id/image_btn_left"
			            android:layout_width="30dp"
				        android:layout_height="30dp"
				        android:src="@drawable/icon_left"
				        android:layout_marginRight="10dp"
				        android:layout_marginLeft="5dp"
				        android:layout_centerVertical="true"
				        android:layout_alignParentLeft="true"/>    
				    <ImageView 
			            android:id="@+id/image_btn_left_mapping"
			            android:layout_width="22dp"
				        android:layout_height="22dp"
				        android:src="@drawable/icon_next"
				        android:layout_marginRight="10dp"
				        android:layout_marginLeft="5dp"
				        android:layout_centerVertical="true"
				        android:layout_alignParentRight="true"/> 
			          
			        <TextView
				        android:layout_width="match_parent"
				        android:layout_height="wrap_content"
				        android:layout_toRightOf="@id/image_btn_left"
				        android:layout_toLeftOf="@id/image_btn_left_mapping"  
				        android:textColor="#ffffff"
				        android:text="left button" 
				        android:layout_centerVertical="true"
				        android:textSize="20sp"/>	        
		    	</RelativeLayout>    
		    </LinearLayout>
		    <!-- 오른쪽 버튼 -->
	        <LinearLayout
			    android:layout_width="match_parent"
			    android:layout_height="wrap_content"
			    android:orientation="vertical"
			    android:paddingBottom="2px"
			    android:background="#55888888">
			    <RelativeLayout
		        	android:id="@+id/btn_right" 
			        android:layout_width="match_parent"
			        android:layout_height="wrap_content"
			        android:background="@drawable/row_background"
			        android:padding="10dp">
			        <ImageView 
			            android:id="@+id/image_btn_right"
			            android:layout_width="30dp"
				        android:layout_height="30dp"
				        android:src="@drawable/icon_right"
				        android:layout_marginRight="10dp"
				        android:layout_marginLeft="5dp"
				        android:layout_centerVertical="true"
				        android:layout_alignParentLeft="true"/>    
				    <ImageView 
			            android:id="@+id/image_btn_right_mapping"
			            android:layout_width="22dp"
				        android:layout_height="22dp"
				        android:src="@drawable/icon_next"
				        android:layout_marginRight="10dp"
				        android:layout_marginLeft="5dp"
				        android:layout_centerVertical="true"
				        android:layout_alignParentRight="true"/> 
			          
			        <TextView
				        android:layout_width="match_parent"
				        android:layout_height="wrap_content"
				        android:layout_toRightOf="@id/image_btn_right"
				        android:layout_toLeftOf="@id/image_btn_right_mapping"  
				        android:textColor="#ffffff"
				        android:text="right button" 
				        android:layout_centerVertical="true"
				        android:textSize="20sp"/>	        
		    	</RelativeLayout>    
		    </LinearLayout>
		    <!-- 휠 버튼 -->
	        <LinearLayout
			    android:layout_width="match_parent"
			    android:layout_height="wrap_content"
			    android:orientation="vertical"
			    android:paddingBottom="2px"
			    android:background="#55888888">
			    <RelativeLayout
		        	android:id="@+id/btn_wheel" 
			        android:layout_width="match_parent"
			        android:layout_height="wrap_content"
			        android:background="@drawable/row_background"
			        android:padding="10dp">
			        <ImageView 
			            android:id="@+id/image_btn_wheel"
			            android:layout_width="30dp"
				        android:layout_height="30dp"
				        android:src="@drawable/icon_wheel"
				        android:layout_marginRight="10dp"
				        android:layout_marginLeft="5dp"
				        android:layout_centerVertical="true"
				        android:layout_alignParentLeft="true"/>    
				    <ImageView 
			            android:id="@+id/image_btn_wheel_mapping"
			            android:layout_width="22dp"
				        android:layout_height="22dp"
				        android:src="@drawable/icon_next"
				        android:layout_marginRight="10dp"
				        android:layout_marginLeft="5dp"
				        android:layout_centerVertical="true"
				        android:layout_alignParentRight="true"/> 
			          
			        <TextView
				        android:layout_width="match_parent"
				        android:layout_height="wrap_content"
				        android:layout_toRightOf="@id/image_btn_wheel"
				        android:layout_toLeftOf="@id/image_btn_wheel_mapping"  
				        android:textColor="#ffffff"
				        android:text="wheel button" 
				        android:layout_centerVertical="true"
				        android:textSize="20sp"/>	        
		    	</RelativeLayout>    
		    </LinearLayout>	        
        </LinearLayout>
    </ScrollView>
</LinearLayout>
